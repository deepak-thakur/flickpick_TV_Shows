    android:layout_height="@dimen/list_item_movie_poster_height_xlarge">

    <ImageView
        android:id="@+id/IV_list_item_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
