<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/list_item_movie_poster_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/IV_list_item_poster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_movie_poster_height"
        android:layout_margin="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_poster"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/Movie_Name_Below_Poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="50px"
        />
    <TextView
        android:id="@+id/Movie_Date_Below_Poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2019"
        android:textSize="15dp"
        android:layout_marginLeft="50px"

        />
</LinearLayout>